def find_second_maximum(arr)
    max1 = arr[0]
    max2 = nil
  
    arr.each do |element|
      if element > max1
        max2 = max1
        max1 = element
      elsif element < max1 && (max2.nil? || element > max2)
        max2 = element
      end
    end
  
    return max2
  end

